<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ClipFlow.App"
             xmlns:local="using:ClipFlow"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <Style Selector="Button.icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="Button.accent">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorLight3}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}"/>
        </Style>
        <Style Selector="Button.accent:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark2}"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <StreamGeometry x:Key="IconCopy">M5 4C3.89 4 3 4.89 3 6V18C3 19.1 3.89 20 5 20H19C20.1 20 21 19.1 21 18V12H19V18H5V6H19V8H21V6C21 4.89 20.1 4 19 4H5ZM16.7 14.7L15.3 13.3L18.6 10H13V8H18.6L15.3 4.7L16.7 3.3L21.7 8.3L16.7 14.7Z</StreamGeometry>
        <StreamGeometry x:Key="IconCheck">M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z</StreamGeometry>
    </Application.Resources>
</Application>