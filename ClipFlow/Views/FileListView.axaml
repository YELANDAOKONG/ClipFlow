<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ClipFlow.ViewModels"
             xmlns:loc="using:ClipFlow.Localization"
             x:Class="ClipFlow.Views.FileListView"
             x:DataType="vm:FileListViewModel"
             DragDrop.AllowDrop="True">

    <Grid RowDefinitions="*,Auto,Auto" Margin="10">
        <TextBox Grid.Row="0" 
                 Text="{Binding FileListText}"
                 AcceptsReturn="True"
                 TextWrapping="NoWrap"
                 Watermark="{Binding StatusMessage}"
                 FontFamily="Consolas, Monospace"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,10" HorizontalAlignment="Right">
            <Button Content="{loc:Translate btn.clear}" 
                    Command="{Binding ClearListCommand}"/>
            <Button Content="{loc:Translate btn.copy}" 
                    Classes="accent"
                    Command="{Binding ProcessFileListCommand}"/>
        </StackPanel>
        
        <ProgressBar Grid.Row="2" IsIndeterminate="True" IsVisible="{Binding IsBusy}" Height="2"/>
        
        <!-- Success Toast -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                Background="#CC4CAF50"
                IsVisible="{Binding IsSuccess}"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                CornerRadius="20" Padding="15,8" Margin="0,0,0,50"
                IsHitTestVisible="False">
            <TextBlock Text="{loc:Translate status.success}" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>